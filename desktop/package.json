{
  "name": "task-board-desktop",
  "version": "0.4.0",
  "description": "2d task board app",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "rm -rf appfiles && npm run build --prefix ../web && cp -r ../web/dist ./appfiles && electron-builder",
    "dist": "electron-builder"
  },
  "author": "Piotr Kozerski <piotr.kozerski@pm.me>",
  "license": "ISC",
  "devDependencies": {
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.1"
  },
  "homepage": "https://piotrek-k.pl",
  "build": {
    "appId": "pl.pk.2d-task-board",
    "productName": "TaskBoard2D",
    "directories": {
      "output": "release-builds"
    },
    "files": [
      "./appfiles/**/*",
      "index.js"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": ["dir"]
    }
  }
}